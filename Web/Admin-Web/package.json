{
  "name": "seven-hives-cms",
  "version": "1.0.0",
  "description": "Seven Hives Content Management System",
  "main": "index.html",
  "scripts": {
    "dev": "live-server src --port=3001",
    "build": "npm run copy-libs && npm run minify",
    "copy-libs": "npm run copy-htmx && npm run copy-splide && npm run copy-anime",
    "copy-htmx": "copy node_modules\\htmx.org\\dist\\htmx.min.js src\\assets\\lib\\",
    "copy-splide": "copy node_modules\\@splidejs\\splide\\dist\\js\\splide.min.js src\\assets\\lib\\ && copy node_modules\\@splidejs\\splide\\dist\\css\\splide.min.css src\\assets\\lib\\",
    "copy-anime": "copy node_modules\\animejs\\lib\\anime.min.js src\\assets\\lib\\",
    "minify": "echo 'Minification setup needed'",
    "serve": "live-server src"
  },
  "devDependencies": {
    "live-server": "^1.2.2"
  },
  "dependencies": {
    "htmx.org": "^1.9.6",
    "@splidejs/splide": "^4.1.4",
    "animejs": "^3.2.1"
  },
  "keywords": [
    "seven-hives",
    "cms",
    "admin",
    "dashboard",
    "htmx",
    "splide",
    "anime"
  ],
  "author": "Seven Hives Team",
  "license": "MIT"
}